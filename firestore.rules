rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users must be authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user's company_id
    function getUserCompanyId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.company_id;
    }
    
    // Users collection
    match /users/{userId} {
      // Un utilisateur peut lire et modifier son propre document
      allow read, update: if isAuthenticated() && request.auth.uid == userId;
      
      // Un utilisateur peut créer des documents pour d'autres utilisateurs
      allow create: if isAuthenticated();
      
      // Un utilisateur peut lire/modifier/supprimer les documents de sa même entreprise
      allow read, update, delete: if isAuthenticated() && 
                                     resource.data.company_id == getUserCompanyId();
    }
    
    // Companies collection
    match /companies/{companyId} {
      allow read, write: if isAuthenticated();
    }
    
    // Products collection
    match /products/{productId} {
      allow read, write: if isAuthenticated() && 
                           resource.data.company_id == getUserCompanyId();
    }
    
    // Agencies collection
    match /agencies/{agencyId} {
      allow read, write: if isAuthenticated() && 
                           resource.data.company_id == getUserCompanyId();
    }
    
  }
}
